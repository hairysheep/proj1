<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% @trainer.pokemons.all.each do |pokemon| %>
  <% if pokemon.ndex %>
    <%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
  <% end %>
  <h5><%= pokemon.name if pokemon.name %></h5>
  <div>Level: <%= pokemon.level if pokemon.level %></div>
  <div>Health: <%= pokemon.health if pokemon.health %></div>
  <%= button_to "Damage", damage_path(id: pokemon), :class => "button small", :method => :patch %>
<% end %>
